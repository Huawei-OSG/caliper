{
   "blockchain": {
    "type": "sawtooth",
    "config": "benchmark/simple/sawtooth.json"
  },
  "test": {
    "clients": {
      "type": "local",
      "number": 1
    },
    "rounds": [{
        "label" : "open",
        "txNumbAndTps" : [[100,1]],
        "arguments": {  "money": 10000 },
        "callback" : "benchmark/simple/open.js",
        "out" : "accounts"
      },
      {
        "label" : "query",
        "txNumbAndTps" : [[100, 1]],
        "arguments": {  "accounts":  "*#out" },
        "callback" : "benchmark/simple/query.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}